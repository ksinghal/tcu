.contentsection
  .row-fluid
    .span4
    .span4
      .formwrapper
        = form_for @slider_image, :url => {:action => "create"}, :html => { :multipart => true } do |f|
          %h3
            Add a New Slider Image
          %div
            = f.email_field :link, placeholder: "Link (Optional)"
          %div
            = f.file_field :photo
          %div
            = f.submit "Create", class: "btn btn-success"
    .span4