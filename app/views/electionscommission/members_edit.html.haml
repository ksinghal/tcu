=h content_for(:title, "Tufts Community Union - Elections Commission")
.contentsection
  .row-fluid
    .span4
    .span4
      .formwrapper
        = form_for @ecom_member, :url => {:action => "members_update"}, :html => { :multipart => true } do |f|
          %h3
            Add a New Elections Commission Member
          %div
            = f.text_field :email, placeholder: "Title"
          %div
            = f.text_field :name, placeholder: "Full Name"
          %div
            = f.number_field :graduation_year, placeholder: "Graduation Year"
          %div
            = f.file_field :photo
          %div
            = f.submit "Update", class: "btn btn-success"
    .span4
      = link_to electionscommission_members_delete_path(@ecom_member.id), method: "delete" do
        Delete Member