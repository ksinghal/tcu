=h content_for(:title, "Tufts Community Union - Treasury")
.contentsection
  .row-fluid
    .span4
    .span4
      .formwrapper
        = form_for @treasury_member, :url => {:action => "members_update"}, :html => { :multipart => true } do |f|
          %h3
            Add a New Treasury Member
          %div
            = f.text_field :email, placeholder: "Title"
          %div
            = f.text_field :name, placeholder: "Full Name"
          %div
            = f.number_field :graduation_year, placeholder: "Graduation Year"
          %div
            = f.file_field :photo
          %div
            = f.submit "Update", class: "btn btn-success"
    .span4
      = link_to treasury_members_delete_path(@treasury_member.id), method: "delete" do
        Delete Member