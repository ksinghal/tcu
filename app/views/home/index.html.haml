    #galleria
      - @slider_images.each do |slider_image|
        - if slider_image.photo_file_name.nil?
          = link_to slider_image.link do
            %span.video
              Video Link
        - else
          - if slider_image.link.nil?
            = image_tag slider_image.photo.url
          - else
            = image_tag(slider_image.photo.url, 'data-link' => slider_image.link)
