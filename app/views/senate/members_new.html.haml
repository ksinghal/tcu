=h content_for(:title, "Tufts Community Union - Senate")
.contentsection
  .row-fluid
    .span4
    .span4
      .formwrapper
        = form_for @senate_member, :url => {:action => "members_create", :method => "post"}, :html => { :multipart => true } do |f|
          %h3
            Add a New Senate Member
          %div
            = f.email_field :email, placeholder: "Email"
          %div
            = f.text_field :name, placeholder: "Full Name"
          %div
            = f.number_field :graduation_year, placeholder: "Graduation Year"
          %div
            = f.file_field :profile_image
          %div
            = f.submit "Create", class: "btn btn-success"
    .span4